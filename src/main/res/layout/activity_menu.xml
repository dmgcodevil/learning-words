<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.learningwords.activity.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add pronunciation"
        android:id="@+id/addPronunciation"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/nativeEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nativeEdit"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addPronunciation"
        android:layout_alignStart="@+id/addPronunciation"
        android:layout_marginTop="38dp"
        android:layout_alignRight="@+id/addPronunciation"
        android:layout_alignEnd="@+id/addPronunciation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foreignEdit"
        android:layout_below="@+id/nativeEdit"
        android:layout_alignLeft="@+id/addPronunciation"
        android:layout_alignStart="@+id/addPronunciation"
        android:layout_alignRight="@+id/nativeEdit"
        android:layout_alignEnd="@+id/nativeEdit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translate"
        android:id="@+id/translateBtn"
        android:layout_below="@+id/textToTranslate"
        android:layout_alignLeft="@+id/textToTranslate"
        android:layout_alignStart="@+id/textToTranslate"
        android:layout_alignRight="@+id/textToTranslate"
        android:layout_alignEnd="@+id/textToTranslate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textToTranslate"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/addPronunciation"
        android:layout_alignStart="@+id/addPronunciation"
        android:layout_alignRight="@+id/addPronunciation"
        android:layout_alignEnd="@+id/addPronunciation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="player"
        android:id="@+id/openPlayer"
        android:layout_below="@+id/foreignWordsList"
        android:layout_alignLeft="@+id/translateBtn"
        android:layout_alignStart="@+id/translateBtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nativeWordsList"
        android:layout_below="@+id/translateBtn"
        android:layout_alignLeft="@+id/openPlayer"
        android:layout_alignStart="@+id/openPlayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foreignWordsList"
        android:layout_below="@+id/nativeWordsList"
        android:layout_alignLeft="@+id/nativeWordsList"
        android:layout_alignStart="@+id/nativeWordsList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
